<section id="page-title" class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h3 id="uploads-title">My uploads</h3>
      </div>
    </div>
  </div>
</section>

<div class="col-md-1"></div>
<div class="col-md-10 center browse_videos_page">
  <ul class="video-tiles">
    <% @videos.each do |video| %>
      <li>
        <div class="browse_video_thumb">
        <%= link_to video_path(video) do %>
          <%= image_tag(video.thumbnail, :class => "vid-thumbnail") %>
          </div>
          <div class="browse_video_title">
            <%= link_to "#{video.title}", video, class: "video-link" %>
            <p id="browse_tags">Tags: <%= tag_links_for(video) %></p>
            <%= button_to 'Edit', "#", class: "btn btn-success btn-lg"  %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul> 
  <div class="text-center">
    <%= will_paginate @videos, previous_label: h("<"), next_label: h(">") %>
  </div>
</div>
<div class="col-md-1"></div>