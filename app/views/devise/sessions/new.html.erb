<%# user sign in page %>
<section id="signup">
  <div class="container">
    <div class="row margin-40">
      <div class="col-sm-6 col-sm-offset-3 text-center signup">
        <h3>Welcome back!</h3>
          <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, :required => false, :autofocus => true %>
              <%= f.input :password, :required => false %>
              <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <input class="btn btn-primary btn-lg" name="commit" type="submit" value="Sign in">
            </div>
          <% end %>
          <a class="btn-sign btn btn-danger btn-sm" <%= link_to "Forgot your password?", new_password_path(resource_name) %><br /></a>
          
 
      </div><!--End Col 6-->    
    </div><!--End Row-->
  </div><!--End Container-->
</section>